{% set app_ruta = app.request.attributes.get('_route') %}
{% set nombre_categoria = app.request.attributes.get('categoria') %}

<nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
  <a class="navbar-brand" href="{{ path('app_index') }}">Subastas</a>
  <button class="navbar-toggler p-0 border-0"
    type="button"
    data-toggle="offcanvas">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link {{ 'app_favoritos' == app_ruta ? 'active' }}" 
            href="{{ path('app_favoritos') }}">
            Favoritos
        </a>
      </li>
      {% for categoria in categoria_repository.findAll %}
          <li class="nav-item">
            <a class="nav-link {{ 'app_index' == app_ruta and categoria.nombre == nombre_categoria ? 'active'  }}"
               href="{{ path('app_index', {categoria: categoria.nombre}) }}">
                {{ categoria.nombre }}
            </a>
          </li>
      {% endfor %}
    </ul>
    <div class="d-md-flex my-2 my-lg-0">
      <a class="btn btn-outline-success mr-2 w-100 mb-3 mb-sm-0" title="Gestión de etiquetas" href="{{ path('etiqueta_index')}}">
        Etiquetas
      </a>
      <a class="btn btn-outline-success mr-2 w-100 mb-3 mb-sm-0" title="Gestión de categorias" href="{{ path('app_listado_categoria')}}">
        Categorías
      </a>
      <a class="btn btn-outline-success mr-2 w-100" title="Añadir nueva subasta" href="{{ path('marcador_new') }}">
        <span class="oi oi-plus" title="añadir" aria-hidden="true"></span>
      </a>
    </div>

  {% if formulario_busqueda is defined %}
     {{
       include('comunes/_buscador.html.twig', {formulario_busqueda:formulario_busqueda})
     }}
    {% else %}
      {{
        render
        (
          controller(
            'App\\Controller\\IndexController::busqueda',
              {
                busqueda: busqueda is defined ? busqueda,
                pagina: pagina is defined ? pagina : 1
              }
            )
        )
      }}
    {% endif %}
  </div>
</nav>