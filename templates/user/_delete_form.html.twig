<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Esta seguro de eliminar al usuario?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn" style="background:white;">
        <i class="fas fa-trash" style="color:red;" title="eliminar usuario"></i>
    </button> 
</form>
