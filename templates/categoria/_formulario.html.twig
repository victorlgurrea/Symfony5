{% extends 'base.html.twig' %}

{% block contenedor_principal %}
            {% include 'comunes/_mensajes.html.twig' %}
            
            <form method="POST">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Introducir Nombre de categoría" value="{{ categoria.nombre }}">
                </div>
                <div class="form-group">
                    <label for="color">Color</label>
                        <input type="text" class="form-control" id="color" name="color" placeholder="Color" value="{{ categoria.color }}">
                </div>
                    <input type="hidden" name="_token" value="{{ csrf_token('categoria')}}">
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-outline-success">Guardar</button>
                        </div>
                        <div class="col-6 text-right">
                            <a class="btn btn-outline-info" title="Gestión de categorias" href="{{ path('app_listado_categoria')}}"><i class="fas fa-undo"></i></a>
                        </div>
                    </div>
                    
            </form>
            
{% endblock %}